<div class="container">
  <div class="row align-items-center padding-top small">
    <div class="col-lg-6 offset-lg-3">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h3 class="text-center">Sign in</h3>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
          <%= f.submit 'Sign in', class: 'btn btn-primary' %>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox padding-top tiny" style="width:150px">
              <label class="custom-control custom-checkbox">
                <%= f.check_box :remember_me, class: 'custom-control-input' %>
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">Remember me</span>
              </label>
            </div>
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
            <% end -%>
          <% end -%>
      <% end %>
    </div>
  </div>
</div>

