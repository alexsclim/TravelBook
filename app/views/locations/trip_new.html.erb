<div class="container">
  <div class="row align-items-center">
    <div class="col-lg-6 offset-lg-3">

      <h3 class="text-center">Add new location</h3>
      <%= form_for(@location, url: user_trip_locations_path) do |f| %>

        <div class="form-group">
          <div>Search for the location to autocomplete the form</div>
          <input id="add-location-geocode" class="form-control"></input>
        </div>

        <div class="form-group">
          *<%= f.label :address %>
          <%= f.text_field :address, fill: 'formatted_address', class: 'form-control' %>
        </div>
        <div class="row">
          <div class="col-6">
            <div class="form-group">
              *<%= f.label :latitude %>
              <%= f.text_field :latitude, fill: 'lat', class: 'form-control' %>
            </div>
          </div>
          <div class="col-6">
            <div class="form-group">
              *<%= f.label :longitude %>
              <%= f.text_field :longitude, fill: 'lng', class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="row">
          <div class="col-6">
            <div class="form-group">
              <%= f.label :start_date %>
              <%= f.text_field :start_date, class: 'form-control', type: 'date' %>
            </div>
          </div>
          <div class="col-6">
            <div class="form-group">
              <%= f.label :end_date %>
              <%= f.text_field :end_date, class: 'form-control', type: 'date' %>
            </div>
          </div>
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>
        <%= f.submit "Add Location", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
