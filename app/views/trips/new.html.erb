<div class="container">
  <div class="row align-items-center padding-top small">
    <div class="col-lg-6 offset-lg-3">

      <h3 class="text-center">Create New Trip</h3>
      <%= form_for(@trip, url: user_trips_path) do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :summary%>
          <%= f.text_field :summary, class: 'form-control' %>
        </div>

        <%= f.submit "Create Trip", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

