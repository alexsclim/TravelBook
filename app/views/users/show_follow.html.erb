<div class="margin-top tiny">
  <h2 class="text-center"><%= full_name(@user) %></h2>
  <% if current_page?(action: 'followers') %>
    <h4 class="text-center">Followers</h2>
  <% else %>
    <h4 class="text-center">Following</h2>
  <% end %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item">
            <%= link_to "#{full_name(user)}", user_path(user) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
